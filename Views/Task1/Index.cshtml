@model IEnumerable<(Andrii_Mykyta_Lab3_ToP.Models.Student, int)>

@{
    ViewData["Title"] = "Task1";
    Layout = "_Layout";
}

<br/>
<h4>Студентів які відвідують найбільшу кількість гуртків</h4>


<table class="table table-striped" style="margin-top: 15px">
    <thead class="bg-info bg-opacity-10">
    <tr>
        <th>
            Прізвище
        </th>
        <th>
            Група
        </th>
        <th>
            Курс
        </th>
        <th>
            К-сть гуртків
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item1.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item1.Group)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item1.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item2)
            </td>
        </tr>
    }
    </tbody>
</table>